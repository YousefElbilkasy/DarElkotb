@model Book
@{
  ViewData["Title"] = "الصفحة الرئيسية";
}

<link rel="stylesheet" href="~/css/landing.css" />

<section class="landing-hero text-white d-flex align-items-center">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-5 fw-bold">دار الكتب</h1>
        <p class="lead">مكتبة إلكترونية تضم مجموعة من الكتب الموثوقة بعناية. تصفح، احجز، أو أضف كتابًا جديدًا بسهولة.
        </p>
        <p class="mt-4">
          <a class="btn btn-light btn-lg me-2" asp-controller="Books" asp-action="Index">تصفح الكتب</a>
        </p>
      </div>
      <div class="col-lg-6 d-none d-lg-block">
        <div class="hero-card p-4 shadow-sm bg-white text-dark rounded">
          <div class="d-flex align-items-center gap-3">
            <img src="~/assets/images/books/@Model.CoverImage" alt="book" class="rounded"
              style="width:96px;height:128px;object-fit:cover;" />
            <div>
              <h5 class="mb-1">@Model.Title</h5>
              <p class="mb-1 text-muted small">@Model.Author.Name</p>
              <p class="mb-0">@Model.Description</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5 bg-light">
  <div class="container">
    <div class="row text-center">
      <div class="col-md-4 mb-4">
        <div class="p-4 bg-white rounded shadow-sm">
          <i class="bi bi-book fs-1 text-primary"></i>
          <h4 class="mt-3">مجموعات متنوعة</h4>
          <p class="text-muted">تصنيفات ومؤلفون وخيارات متعددة لتسهيل البحث عن الكتاب المناسب.</p>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="p-4 bg-white rounded shadow-sm">
          <i class="bi bi-wallet2 fs-1 text-primary"></i>
          <h4 class="mt-3">أسعار شفافة</h4>
          <p class="text-muted">عرض واضح لأسعار الكتب وخيارات الشراء أو الإعارة.</p>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="p-4 bg-white rounded shadow-sm">
          <i class="bi bi-shield-lock fs-1 text-primary"></i>
          <h4 class="mt-3">آمن وموثوق</h4>
          <p class="text-muted">نحافظ على جودة المحتوى وخصوصية المستخدم.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5 text-center">
  <div class="container">
    <h3 class="mb-3">ابدأ الآن</h3>
    <p class="text-muted mb-4">انضم إلى مجتمع القراء وأضف لمكتبتك اليوم.</p>
    <a class="btn btn-primary btn-lg" asp-controller="Books" asp-action="Index">تصفح الكتب</a>
  </div>
</section>