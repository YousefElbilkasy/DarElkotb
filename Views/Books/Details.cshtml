@model DarElkotb.Models.Book
@{
  ViewData["Title"] = "تفاصيل الكتاب";
}

<div class="my-4">
  <div class="d-flex align-items-start gap-4 flex-column flex-lg-row">
    <div class="card shadow-sm flex-shrink-0" style="width:320px;">
      <img src="~/assets/images/books/@Model.CoverImage" class="card-img-top" alt="@Model.Title"
        style="height:420px;object-fit:cover;">
      <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="text-muted mb-1 small">@Model.Category?.Name</p>
        <p class="mb-0">سعر: <strong>@Model.Price</strong> ج.م</p>
      </div>
    </div>

    <div class="flex-fill">
      <div class="d-flex justify-content-between align-items-start">
        <div>
          <h3 class="mb-1">@Model.Title</h3>
          <p class="text-muted mb-2">المؤلف: <strong>@Model.Author?.Name</strong> • الناشر:
            <strong>@Model.Publisher?.Name</strong>
          </p>
        </div>
        <div class="text-end">
          <a class="btn btn-outline-primary me-2" asp-action="Index">
            <i class="bi bi-arrow-left"></i>
            العودة
          </a>
          <a class="btn btn-warning me-2" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="bi bi-pencil"></i>
            تعديل
          </a>
          <!-- Delete button triggers modal -->
          <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="bi bi-trash-fill"></i>
            حذف
          </button>

          <!-- Delete confirmation modal -->
          <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title text-secondary" id="deleteModalLabel">تأكيد الحذف</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  هل أنت متأكد أنك تريد حذف الكتاب "<strong>@Model.Title</strong>"؟ هذا الإجراء لا يمكن التراجع عنه.
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">إلغاء</button>
                  <form asp-action="Delete" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-secondary">حذف نهائي</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <hr />

      <div class="mb-4">
        <h5>الوصف</h5>
        <p class="text-muted">@Model.Description</p>
      </div>

      <div class="row g-3">
        <div class="col-md-4">
          <div class="p-3 bg-light rounded">
            <small class="text-muted">تاريخ النشر</small>
            <div>@Model.PublishDate.ToString("yyyy-MM-dd")</div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="p-3 bg-light rounded">
            <small class="text-muted">الناشر</small>
            <div>@Model.Publisher?.Name</div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="p-3 bg-light rounded">
            <small class="text-muted">التصنيف</small>
            <div>@Model.Category?.Name</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>